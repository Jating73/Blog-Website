<%- include("partials/header"); -%>
   <section class="main">
      <div class="container">
         <div class="row">
            <div class="col-md-8">
               <div class="content">
                  <h1 class=""> <%= title %> </h1>
                  <p class="justify-content"> <%= content %> </p>
               </div>
               <div class="card">
                  <div class="card-body">
                      <h6 class="card-title">You comment</h6>
                      <form>
                          <div class="mb-3">
                              <input type="text" class="form-control form-control-sm" placeholder="Your name">
                          </div>
                          <div class="mb-3">
                              <input type="email" class="form-control form-control-sm" placeholder="Your Email ID">
                          </div>
                          <div class="mb-3">
                              <textarea class="form-control form-control-sm" rows="6" placeholder="Your Comment"></textarea>
                          </div>
                          <div class="mb-3">
                              <input type="submit" class="btn btn-sm btn-primary" value="Post Comment">
                          </div>
                      </form>
                  </div>
              </div>
            </div>
            <div class="col-md-4">
               <aside class="card text-white bg-primary mb-3">
                  <div class="card-body">
                      <h4 class="card-title">Subscribe for News Letters</h4>
                      <p class="card-text">Get latest updates and freebies</p>
                      <form>
                          <div class="mb-3">
                              <input type="email" class="form-control form-control-sm" placeholder="Email ID" required>
                          </div>
                          <div class="mb-3">
                              <input type="submit" class="btn btn-block btn-sm btn-warning" value="Subscribe Now!">
                          </div>
                      </form>
                  </div>
              </aside>

               <div class="">
                  <ul class="list-group mb-3">
                     <li class="list-group-item active">Recent Posts</li>
                      <% posts.forEach((post)=>{ %>
                          <%    console.log(post.title); %>
                          <li class="list-group-item"><a href="/posts/<%=post.title%>"><%= post.title %></a></li>
                      <%}) %>
                    </ul>
              </div>
            </div>
         </div>
         
      </div>    
   </section>
<%- include("partials/footer"); -%>