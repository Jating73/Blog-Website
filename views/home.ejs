<%- include('partials/header'); -%>
    <div class="jumbotron">
        <h1 class="display-4">Home</h1>
        <p> <%= startingcontent %> </p>
    </div>
    <section class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="row">
                        <% posts.forEach((post)=>{ %>
                            <%    console.log(post.title); %>
                            <div class="col-md-4">
                                <h2><%= post.title %></h2>
                                <p><%= post.content.substring(0,100) + "..." %> <a href="/posts/<%=post.title%>">Read More</a> </p>
                            </div>
                        <%}) %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="position-fixed">
                        <h4 class="text-uppercase">Popular Posts</h4>
                        <ul class="list-group-flush">
                            <% posts.forEach((post)=>{ %>
                                <%    console.log(post.title); %>
                                <li class="list-group-item"><a href="/posts/<%=post.title%>"><%= post.title %></a></li>
                            <%}) %>
                          </ul>
                    </div>
                </div>    
            </div>
        </div>
    </section>
<%- include('partials/footer'); -%>